---

import { Icon } from "astro-icon/components";

const navItems = {
  links: [
    { href: "/buy", text: "Buy" },
    { href: "/rent", text:"Rent" },
    { href: "/services", text: "Services" },
    { href: "/about", text: "About us" },
    { href: "/blog", text: "Blog" },
  ],
  dropmenu: [
    {
      title: "Services",
      dropdown: [
        { href: "", text: "Property Management" },
            { href: "", text: "Luxury Concierge", items: [
                {href: "", text: "Daily Asistance"},
                {href: "", text: "Experiences"},
                {href: "", text: "Transportation", items: [
                            {href: "" , text: "Ground"},
                            {href: "" , text: "Water"}
                    ]}
            ]}
      ]
    },
  ]
};

const links = navItems.links;
const dropdowns = navItems.dropmenu[0].dropdown;
---

<nav class="w-full bg-white dark:bg-slate-800 fixed shadow-md p-5 z-10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between">

      <!-- Logo - Izquierda en Desktop y Mobile -->
      <a href="/" class="flex-shrink-0">
        <img width="50" height="50" src="/favicon.svg" alt="Logo" />
      </a>

      <!-- Menú de navegación - Centro en Desktop -->
      <div class="hidden md:flex md:flex-1 justify-center space-x-4">
        {links.map((item) => (
          <a
            
            href={item.href}
            class="dark:text-white hover:text-[#60C11C] font-display px-3 py-2 rounded-md text-sm font-light uppercase"
          >
            {item.text}
          </a>
        ))}

        <!-- Botón de Soluciones con Dropdown -->
        <div class="relative group">
          <!-- Botón principal con el título del dropdown -->
          <button
            type="button"
            class="dark:text-white hover:text-[#60C11C] px-3 py-2 rounded-md text-sm font-display font-light uppercase focus:outline-none inline-flex items-center transition-transform ease-out duration-150 transform hover:scale-105 hover:opacity-100 opacity-90"
          >
            {navItems.dropmenu[0].title}
            <Icon name="arrow" />
          </button>
        
          <!-- Menú desplegable -->
          <div class="absolute left-0 mt-2 w-48 bg-white dark:bg-slate-800 shadow-lg rounded-md py-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible group-hover:translate-y-1 transition-all duration-300 ease-in-out">
            {dropdowns.map((item) => (
              <a
                href={item.href}
                class="block px-4 py-2 dark:text-white hover:text-[#60C11C] text-sm font-display font-light uppercase"
              >
                {item.text}
              </a>
            ))}
          </div>
        </div>
        
      </div>

      <!-- ThemeToggle - Derecha en Desktop -->
      <div class="hidden md:flex justify-end items-center">
        
      </div>


      <div class="md:hidden flex items-center">
        
         <!--Themee Toogle  Centro en Mobile -->
      </div>
      
      <!-- ThemeToggle y Mobile Menu en Mobile -->
      <div class="md:hidden flex items-center">
  <!-- Lado derecho en Mobile -->
      </div>

    </div>
  </div>
</nav>
