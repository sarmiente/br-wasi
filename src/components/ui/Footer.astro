---
import Logo from "../../icons/br_logo.svg"
import Image from "astro/components/Image.astro";
import { Icon } from "astro-icon/components";

const date = new Date();

const footerData = [
  {
    title: "About Us",
    items: [
      { text: "Company History", href : "" },
      { text: "Meet the Team", href : "" },
    ],
  },
  {
    title: "Our Services",
    items: [
      { text: "Property Management", href : "" },
      { text: "Luxury Concierge", href : "" },
    ],
  },
  {
    title: "Helpful links",
    items: [
      { text: "FAQs", href : "" },
      { text: "Support", href : "" }
    ],
  },
];

// console.log(footerData[0]);

---
<!--
  Heads up! ðŸ‘‹

  This component comes with some `rtl` classes. Please remove them if they are not needed in your project.
-->

<footer class="bg-white">
  <div class="mx-auto max-w-screen-xl px-4 pb-6 pt-16 sm:px-6 lg:px-8 lg:pt-24">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
      <div>
        <div class="flex justify-center text-teal-600 sm:justify-start">
          <Image src={Logo} alt="" width={100}/>
        </div>

        <p class="mt-6 max-w-md text-center font-hero leading-relaxed text-gray-500 sm:max-w-xs sm:text-left">
         Your home away home
        </p>

        <ul class="mt-8 flex justify-center gap-6 sm:justify-start md:gap-8">
          <li>
            <a
              href="#"
              rel="noreferrer"
              target="_blank"
              class="text-[#60C11C] transition hover:text-teal-700/75"
            >
              <span class="sr-only">Facebook</span>
              <Icon class="h-6 w-6" name="facebook" />
            </a>
          </li>

          <li>
            <a
              href="#"
              rel="noreferrer"
              target="_blank"
              class="text-[#60C11C] transition hover:text-teal-700/75"
            >
              <span class="sr-only">Instagram</span>
              <Icon class="h-6 w-6" name="instagram" />
            </a>
          </li>

        </ul>
      </div>

      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 md:grid-cols-4 lg:col-span-2">
        <div class="text-center sm:text-left">
          <p class="text-lg font-medium font-heading text-gray-900">About Us</p>

          <ul class="mt-8 space-y-4 text-sm">
           {
            footerData[0].items.map((item) => (
            <li>
                <a class="text-gray-700  transition font-hero hover:text-gray-700/75" href={item.href}>
                  {item.text}
                </a>
            </li>
            ))
           }

          </ul>
        </div>

        <div class="text-center sm:text-left">
          <p class="text-lg font-medium font-heading text-gray-900">Our Services</p>

          <ul class="mt-8 space-y-4 text-sm">
            {
              footerData[1].items.map((item) => (
                <li>
                  <a class="text-gray-700 transition font-hero hover:text-gray-700/75" href={item.href}>
                    {item.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div class="text-center sm:text-left">
          <p class="text-lg font-medium font-heading text-gray-900">Helpful Links</p>

          <ul class="mt-8 space-y-4 text-sm">
            {
              footerData[2].items.map((item) => (
                <li>
                  <a class="text-gray-700 transition font-hero hover:text-gray-700/75" href={item.href}>
                    {item.text}
                  </a>
                </li>
              ))
            }

           
          </ul>
        </div>

        <div class="text-center sm:text-left">
          <p class="text-lg font-medium font-heading text-gray-900">Contact Us</p>

          <ul class="mt-8 space-y-4 text-sm">
            <li>
              <a
                class="flex items-center justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
                href="mailto:info@brsolution.com.co"
              >
                <Icon class="h-4 w-4" name="envelop" />

                <span class="flex-1 text-gray-700 font-hero">info@brsolution.com.co</span>
              </a>
            </li>

            <li>
              <a
                class="flex items-center justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
                href="#"
              >
                <Icon class="h-4 w-4 text-green-500" name="whatsapp" />

                <span class="flex-1 text-gray-700 font-hero">+57 324 201 6401</span>
              </a>
            </li>

            <li
              class="flex items-start justify-center gap-1.5 ltr:sm:justify-start rtl:sm:justify-end"
            >
              <Icon class="h4 w-4 text-red-600" name="location" />

              <address class="-mt-0.5 flex-1 not-italic text-gray-700 font-hero">
                Cartagena de Indias, Colombia
              </address>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="mt-12 border-t border-gray-100 pt-6">
      <div class="text-center sm:flex sm:justify-between sm:text-left">
        <a href="http://devs.sarpin.agency/" target="_blank"><span class="font-pattern block sm:inline text-sm text-gray-400 hover:text-orange-500 pb-5 md:p-0">sarpin.agency</span></a>
        <p class="text-sm text-gray-500">
          

          <a
            class="inline-block font-body text-[#60C11C] transition hover:text-[#60C11C]/75"
            href="#"
          >
            Terms & Conditions
          </a>

          <span>&middot;</span>

          <a
            class="inline-block font-body text-[#60C11C] transition hover:text-teal-600/75"
            href="#"
          >
            Privacy Policy
          </a>
        </p>
        
        <p class="mt-4 text-sm font-body text-gray-500 sm:order-first sm:mt-0">BR Solutions &copy; {date.getFullYear()} All rights reserved. </p>
      </div>
    </div>
  </div>
</footer>