---
import Logo from "../../icons/br_logo.svg"
import Image from "astro/components/Image.astro";
import { Icon } from "astro-icon/components";

const date = new Date();

const footerData = [
  {
    title: "About Us",
    items: [
      { text: "Who we are", href : "/who-we-are" },
      { text: "Meet the Team", href : "/meet-team" },
    ],
  },
  {
    title: "Our Services",
    items: [
      { text: "Property Management", href : "" },
      { text: "Luxury Concierge", href : "" },
    ],
  },
  {
    title: "Helpful links",
    items: [
      { text: "FAQs", href : "" },
      { text: "Support", href : "" }
    ],
  },
];

// console.log(footerData[0]);

---
<!--
